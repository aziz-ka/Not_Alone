<div class="edit">
  <header>
    <h1>Update profile</h1>
    <nav>
      <ul class="navbar">
        <li><a href="/">Home</a></li>
        <li><a href="/issues">Issues</a></li>
        <li><a href="/seniors/profile">My Profile</a></li>
        <% unless current_user %>
          <li><a href="/sessions/new">Sign In</a></li>
          <li><a href="/seniors/sign_up">Sign Up</a></li>
        <% end %>
      </ul>
    </nav>
  </header>
  <% if current_user.errors.any? %>
    <ul class="errors">
      <% current_user.errors.full_messages.each do |i| %>
        <li><%= i %></li>
      <% end %>
    </ul>
  <% end %>

  <h2>Edit your account information here</h2>

  <form action="/seniors/profile" method="post">
    <%= token_tag%>
    <input type="hidden" name="_method" value="put">
    <input type="text" name="senior[name]" value="<%= current_user.name %>">
    <input type="text" name="senior[email]" value="<%= current_user.email %>">
    <input type="text" name="senior[address]" value="<%= current_user.address %>">
    <input type="text" name="senior[phone_number]" value="<%= current_user.phone_number %>">
    <input type="password" name="senior[password]" value="Password">
    <input type="password" name="senior[password_confirmation]" value="Confirm password">
    <input type="submit">
  </form>


  <footer>
    <p>Made as is by Aziz</p>
  </footer>
</div>
